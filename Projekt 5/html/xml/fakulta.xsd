<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- Define complex types -->
  <xs:complexType name="PersonType">
    <xs:sequence>
      <xs:element name="jmeno" type="xs:string"/>
      <xs:element name="prijmeni" type="xs:string"/>
      <xs:element name="telefon" type="xs:string"/>
      <xs:element name="email" type="xs:string"/>
      <xs:element name="tituly" maxOccurs="unbounded">
                    <xs:complexType>
                      <xs:sequence>
                        <xs:element name="titul" type="xs:string" maxOccurs="unbounded"/>
                      </xs:sequence>
                    </xs:complexType>
                  </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="DepartmentType">
    <xs:sequence>
      <xs:element name="nazev" type="xs:string"/>
      <xs:element name="vedouci" type="PersonType"/>
      <xs:element name="zamestnanci">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="zamestnanec" maxOccurs="unbounded">
              <xs:complexType>
                <xs:sequence>
                  <xs:element name="jmeno" type="xs:string"/>
                  <xs:element name="prijmeni" type="xs:string"/>
                  <xs:element name="telefon" type="xs:string"/>
                  <xs:element name="email" type="xs:string"/>
                  <xs:element name="pozice" type="xs:string"/>
                  <xs:element name="tituly" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                      <xs:sequence>
                        <xs:element name="titul" type="xs:string" maxOccurs="unbounded"/>
                      </xs:sequence>
                    </xs:complexType>
                  </xs:element>
                </xs:sequence>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="predmety">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="predmet" maxOccurs="unbounded">
              <xs:complexType>
                <xs:sequence>
                  <xs:element name="nazev" type="xs:string"/>
                  <xs:element name="popis" type="xs:string"/>
                </xs:sequence>
                <xs:attribute name="zkratka" type="xs:string"/>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FacultyType">
    <xs:sequence>
      <xs:element name="nazev" type="xs:string"/>
      <xs:element name="dekan" type="PersonType"/>
      <xs:element name="katedry">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="katedra" type="DepartmentType" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="fakulty">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="fakulta" type="FacultyType" maxOccurs="unbounded"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>
